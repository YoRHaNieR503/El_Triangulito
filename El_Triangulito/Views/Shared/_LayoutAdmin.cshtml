<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Dashboard Administrativo</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
    <!-- Estilos personalizados -->
    <style>
        body {
            background-color: #1a1a1a;
            color: #f8f9fa;
            font-family: 'Poppins', sans-serif;
        }

        .sidebar {
            height: 100vh;
            width: 250px;
            position: fixed;
            top: 0;
            left: 0;
            background-color: #343a40;
            padding-top: 20px;
            overflow-y: auto;
        }

            .sidebar a {
                padding: 10px 15px;
                text-decoration: none;
                font-size: 1rem;
                color: #f8f9fa;
                display: block;
                transition: background-color 0.3s ease;
            }

                .sidebar a:hover {
                    background-color: #007bff;
                }

        .main-content {
            margin-left: 250px;
            padding: 20px;
        }

        .dashboard-header {
            background: linear-gradient(135deg, #343a40, #212529);
            color: white;
            padding: 20px;
            margin-bottom: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
        }

        .card {
            border: none;
            border-radius: 8px;
            background: #2d2d2d;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 6px 12px rgba(0, 0, 0, 0.5);
            }

        .card-body {
            padding: 15px;
            text-align: center;
        }

        .card-title {
            font-size: 1.1rem;
            font-weight: 600;
            color: #f8f9fa;
            margin-bottom: 8px;
        }

        .card-text {
            color: #adb5bd;
            font-size: 0.85rem;
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
            border-radius: 6px;
            padding: 8px 16px;
            font-size: 0.85rem;
            font-weight: 500;
            transition: background-color 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }

        .fa-3x {
            font-size: 2em;
            margin-bottom: 10px;
            color: #007bff;
        }

        /* Responsive Styles */
        @@media (max-width: 768px) {
            .sidebar {
                width: 100%;
                height: auto;
                position: relative;
            }

            .main-content {
                margin-left: 0;
            }
        }

        @@media (max-width: 576px) {
            .dashboard-header h1 {
                font-size: 1.5rem;
            }

            .dashboard-header p {
                font-size: 0.9rem;
            }

            .btn-primary {
                width: 100%;
                margin-bottom: 10px;
            }
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <a href="@Url.Action("Index", "Dashboard")"><i class="fas fa-tachometer-alt"></i> Dashboard</a>
        <a href="@Url.Action("Index", "Categorias")"><i class="fas fa-list-alt"></i> Categorías</a>
        <a href="@Url.Action("Index", "Combos")"><i class="fas fa-hamburger"></i> Combos</a>
        <a href="@Url.Action("Index", "Cuenta")"><i class="fas fa-receipt"></i> Cuentas</a>
        <a href="@Url.Action("Index", "Mesas")"><i class="fas fa-chair"></i> Mesas</a>
        <a href="@Url.Action("Index", "Promociones")"><i class="fas fa-percent"></i> Promociones</a>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        @RenderBody()
    </div>

    <!-- Bootstrap JS y dependencias -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery (opcional, para validaciones) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Renderizar la sección Scripts -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>