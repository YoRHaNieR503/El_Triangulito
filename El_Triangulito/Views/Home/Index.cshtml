@{
    ViewData["Title"] = "Dashboard Administrativo";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
    <!-- Estilos personalizados -->
    <style>
        body {
            background-color: #1a1a1a; /* Fondo oscuro */
            color: #f8f9fa; /* Texto claro */
            font-family: 'Poppins', sans-serif;
        }

        .dashboard-header {
            background: linear-gradient(135deg, #343a40, #212529); /* Gradiente oscuro */
            color: white;
            padding: 20px; /* Reducido */
            margin-bottom: 20px; /* Reducido */
            border-radius: 8px; /* Reducido */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3); /* Reducido */
        }

            .dashboard-header h1 {
                margin: 0;
                font-size: 2rem; /* Reducido */
                font-weight: 600;
            }

            .dashboard-header p {
                font-size: 0.9rem; /* Reducido */
                opacity: 0.9;
            }

        .card {
            border: none;
            border-radius: 8px; /* Reducido */
            background: #2d2d2d; /* Fondo oscuro para tarjetas */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3); /* Reducido */
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .card:hover {
                transform: translateY(-5px); /* Reducido */
                box-shadow: 0 6px 12px rgba(0, 0, 0, 0.5); /* Reducido */
            }

        .card-body {
            padding: 15px; /* Reducido */
            text-align: center;
        }

        .card-title {
            font-size: 1.1rem; /* Reducido */
            font-weight: 600;
            color: #f8f9fa; /* Texto claro */
            margin-bottom: 8px; /* Reducido */
        }

        .card-text {
            color: #adb5bd; /* Texto secundario */
            font-size: 0.85rem; /* Reducido */
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
            border-radius: 6px; /* Reducido */
            padding: 8px 16px; /* Reducido */
            font-size: 0.85rem; /* Reducido */
            font-weight: 500;
            transition: background-color 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }

        .fa-3x {
            font-size: 2em; /* Reducido */
            margin-bottom: 10px; /* Reducido */
            color: #007bff; /* Color azul para íconos */
        }

        .row {
            margin: -8px; /* Reducido */
        }

        .col-md-3 {
            padding: 8px; /* Reducido */
        }

        a {
            color: #007bff; /* Color azul para enlaces */
            text-decoration: none;
        }

            a:hover {
                color: #0056b3;
            }
    </style>
</head>
<body>
    <div class="container">
        <!-- Encabezado del Dashboard -->
        <div class="dashboard-header text-center">
            <h1><i class="fas fa-tachometer-alt"></i> Dashboard Administrativo</h1>
            <p class="lead">Gestiona todas las entidades de tu aplicación desde un solo lugar.</p>
        </div>

        <!-- Tarjetas de Entidades -->
        <div class="row">
            <!-- Categorías -->
            <div class="col-md-3 mb-3">
                <!-- Reducido -->
                <div class="card h-100">
                    <div class="card-body">
                        <i class="fas fa-list-alt fa-3x"></i>
                        <h5 class="card-title">Categorías</h5>
                        <p class="card-text">Gestiona las categorías de los items del menú.</p>
                        <a href="@Url.Action("Index", "Categorias")" class="btn btn-primary">Ir a Categorías</a>
                    </div>
                </div>
            </div>

            <!-- Combos -->
            <div class="col-md-3 mb-3">
                <!-- Reducido -->
                <div class="card h-100">
                    <div class="card-body">
                        <i class="fas fa-hamburger fa-3x"></i>
                        <h5 class="card-title">Combos</h5>
                        <p class="card-text">Administra los combos disponibles en el menú.</p>
                        <a href="@Url.Action("Index", "Combos")" class="btn btn-primary">Ir a Combos</a>
                    </div>
                </div>
            </div>

            <!-- Cuentas -->
            <div class="col-md-3 mb-3">
                <!-- Reducido -->
                <div class="card h-100">
                    <div class="card-body">
                        <i class="fas fa-receipt fa-3x"></i>
                        <h5 class="card-title">Cuentas</h5>
                        <p class="card-text">Gestiona las cuentas de los clientes.</p>
                        <a href="@Url.Action("Index", "Cuenta")" class="btn btn-primary">Ir a Cuentas</a>
                    </div>
                </div>
            </div>

            <!-- Items Combo -->
            <div class="col-md-3 mb-3">
                <!-- Reducido -->
                <div class="card h-100">
                    <div class="card-body">
                        <i class="fas fa-box-open fa-3x"></i>
                        <h5 class="card-title">Items Combo</h5>
                        <p class="card-text">Administra los items que componen los combos.</p>
                        <a href="@Url.Action("Index", "ItemsCombo")" class="btn btn-primary">Ir a Items Combo</a>
                    </div>
                </div>
            </div>

            <!-- Items Menú -->
            <div class="col-md-3 mb-3">
                <!-- Reducido -->
                <div class="card h-100">
                    <div class="card-body">
                        <i class="fas fa-utensils fa-3x"></i>
                        <h5 class="card-title">Items Menú</h5>
                        <p class="card-text">Gestiona los items del menú.</p>
                        <a href="@Url.Action("Index", "ItemsMenu")" class="btn btn-primary">Ir a Items Menú</a>
                    </div>
                </div>
            </div>

            <!-- Items Promo -->
            <div class="col-md-3 mb-3">
                <!-- Reducido -->
                <div class="card h-100">
                    <div class="card-body">
                        <i class="fas fa-tags fa-3x"></i>
                        <h5 class="card-title">Items Promo</h5>
                        <p class="card-text">Administra los items que forman parte de promociones.</p>
                        <a href="@Url.Action("Index", "ItemsPromo")" class="btn btn-primary">Ir a Items Promo</a>
                    </div>
                </div>
            </div>

            <!-- Mesas -->
            <div class="col-md-3 mb-3">
                <!-- Reducido -->
                <div class="card h-100">
                    <div class="card-body">
                        <i class="fas fa-chair fa-3x"></i>
                        <h5 class="card-title">Mesas</h5>
                        <p class="card-text">Gestiona las mesas del restaurante.</p>
                        <a href="@Url.Action("Index", "Mesas")" class="btn btn-primary">Ir a Mesas</a>
                    </div>
                </div>
            </div>

            <!-- Promociones -->
            <div class="col-md-3 mb-3">
                <!-- Reducido -->
                <div class="card h-100">
                    <div class="card-body">
                        <i class="fas fa-percent fa-3x"></i>
                        <h5 class="card-title">Promociones</h5>
                        <p class="card-text">Administra las promociones disponibles.</p>
                        <a href="@Url.Action("Index", "Promociones")" class="btn btn-primary">Ir a Promociones</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS y dependencias -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>