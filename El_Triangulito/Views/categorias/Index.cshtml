@model IEnumerable<ModuloMeseros.Models.categorias>

@{
    ViewData["Title"] = "Gestión de Categorías";
}

<!-- Font Awesome -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
<!-- Estilos personalizados -->
<style>
    body {
        background-color: #1a1a1a; /* Fondo oscuro */
        color: #fff; /* Texto blanco */
    }

    .container-custom {
        max-width: 1400px; /* Ancho máximo del contenido */
        margin: 0 auto; /* Centra el contenido */
        padding: 40px 20px; /* Espaciado interno */
    }

    .header-custom {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px; /* Espacio debajo del encabezado */
    }

        .header-custom h1 {
            font-size: 2.5rem;
            margin: 0;
        }

    .btn-custom {
        border-radius: 5px;
        padding: 10px 20px; /* Botones más grandes */
        font-size: 1rem; /* Texto más grande */
        transition: background-color 0.2s;
        margin: 5px; /* Espacio entre botones */
        text-decoration: none; /* Quita el subrayado de los enlaces */
    }

        .btn-custom:hover {
            background-color: rgba(255, 255, 255, 0.1); /* Efecto hover suave */
        }

    .btn-primary-custom {
        background-color: #0d6efd;
        border: none;
    }

        .btn-primary-custom:hover {
            background-color: #0b5ed7;
        }

    .btn-warning-custom {
        background-color: #ffc107;
        border: none;
        color: #000;
    }

        .btn-warning-custom:hover {
            background-color: #e0a800;
        }

    .btn-info-custom {
        background-color: #17a2b8;
        border: none;
    }

        .btn-info-custom:hover {
            background-color: #138496;
        }

    .btn-danger-custom {
        background-color: #dc3545;
        border: none;
    }

        .btn-danger-custom:hover {
            background-color: #c82333;
        }

    .table-custom {
        width: 100%;
        background-color: #343a40;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        margin-top: 20px; /* Más espacio arriba de la tabla */
    }

        .table-custom th, .table-custom td {
            border-color: #444;
            vertical-align: middle;
            padding: 15px; /* Más espacio en las celdas */
        }

        .table-custom th {
            background-color: #212529;
            color: #fff;
            font-weight: 600;
        }

        .table-custom tbody tr:hover {
            background-color: #3d4348;
        }

    /* Alinear botones a la derecha */
    .actions-cell {
        display: flex;
        justify-content: flex-end; /* Alinea los botones a la derecha */
        gap: 10px; /* Espacio entre botones */
    }
</style>

<div class="container-custom">
    <!-- Encabezado -->
    <div class="header-custom">
        <h1><i class="fas fa-list-alt"></i> Gestión de Categorías</h1>
        <a asp-action="Create" class="btn btn-primary-custom btn-custom">
            <i class="fas fa-plus"></i> Crear Nueva Categoría
        </a>
    </div>

    <!-- Tabla de categorías -->
    <div class="table-responsive">
        <table class="table table-dark table-hover table-custom">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.categoria)</th>
                    <th class="text-end">Acciones</th> <!-- Alinea el texto "Acciones" a la derecha -->
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.categoria)</td>
                        <td class="actions-cell">
                            <a asp-action="Edit" asp-route-id="@item.id_categoria" class="btn btn-warning-custom btn-custom">
                                <i class="fas fa-edit"></i> Editar
                            </a>
                            <a asp-action="Details" asp-route-id="@item.id_categoria" class="btn btn-info-custom btn-custom">
                                <i class="fas fa-info-circle"></i> Detalles
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.id_categoria" class="btn btn-danger-custom btn-custom">
                                <i class="fas fa-trash-alt"></i> Eliminar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>